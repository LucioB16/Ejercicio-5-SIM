<Window x:Class="SimulacionRosasWPF.VentanaResultados"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resultados Simulación"
        SizeToContent="Width"
        MaxWidth="{x:Static SystemParameters.PrimaryScreenWidth}"
        Height="650"
        WindowStartupLocation="CenterOwner">
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <!-- Ganancia media final -->
      <RowDefinition Height="Auto"/>
      <!-- DataGrid -->
      <RowDefinition Height="*"/>
      <!-- Botón Ver gráfico -->
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    
    <!-- Texto con la ganancia media final -->
    <TextBlock x:Name="lblMediaFinal"
               Grid.Row="0"
               FontWeight="Bold"
               FontSize="14"
               Margin="0,0,0,10"/>

    <!-- DataGrid con scroll -->
    <DataGrid x:Name="dgResultados"
              Grid.Row="1"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              ItemsSource="{Binding Resultados}"
              MaxHeight="500"
              ScrollViewer.VerticalScrollBarVisibility="Auto"
              ScrollViewer.HorizontalScrollBarVisibility="Auto"
              HorizontalAlignment="Stretch">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Día"             Binding="{Binding Dia}"                   Width="60"/>
        <DataGridTextColumn Header="Rand Clima"      Binding="{Binding RandClima, StringFormat=F3}" Width="80"/>
        <DataGridTextColumn Header="Clima"           Binding="{Binding Clima}"                 Width="100"/>
        <DataGridTextColumn Header="Rand Demanda"    Binding="{Binding RandDemanda, StringFormat=F3}" Width="80"/>
        <DataGridTextColumn Header="Cant Demanda"    Binding="{Binding CantDemanda}"           Width="80"/>
        <DataGridTextColumn Header="Cant Compra"     Binding="{Binding CantCompra}"            Width="80"/>
        <DataGridTextColumn Header="Cant Venta"      Binding="{Binding CantVenta}"             Width="80"/>
        <DataGridTextColumn Header="Cant Faltante"   Binding="{Binding CantFaltante}"          Width="80"/>
        <DataGridTextColumn Header="Cant Sobrante"   Binding="{Binding CantSobrante}"          Width="80"/>
        <DataGridTextColumn Header="Gan Ventas"      Binding="{Binding GanVentas, StringFormat=C}" Width="100"/>
        <DataGridTextColumn Header="Costo Compra"    Binding="{Binding CostoCompra, StringFormat=C}" Width="100"/>
        <DataGridTextColumn Header="Gan Sobrante"    Binding="{Binding GanSobrante, StringFormat=C}" Width="100"/>
        <DataGridTextColumn Header="Costo Faltante"  Binding="{Binding CostoFaltante, StringFormat=C}" Width="100"/>
        <DataGridTextColumn Header="Gan Diaria"      Binding="{Binding GananciaDiaria, StringFormat=C}" Width="100"/>
        <DataGridTextColumn Header="Gan Acumulada"   Binding="{Binding GananciaAcumulada, StringFormat=C}" Width="100"/>
        <DataGridTextColumn Header="Gan Media"       Binding="{Binding GananciaMedia, StringFormat=C}" Width="100"/>
      </DataGrid.Columns>
    </DataGrid>

    <!-- Botón Ver gráfico -->
    <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,10,0,0">
      <Button Content="Ver gráfico"
              Width="120"
              Click="AlClicVerGrafico"/>
    </StackPanel>
  </Grid>
</Window>
